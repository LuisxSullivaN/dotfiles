# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cpp,h,java,pl,pm,go,gradle,tex}]
indent_style = tab
tab_width = 4

[*.py]
indent_style = space
indent_size = 4

[*.{html,css,scss,js,jsx,jsp,md,markdown,dart,yml}]
indent_style = space
indent_size = 2
